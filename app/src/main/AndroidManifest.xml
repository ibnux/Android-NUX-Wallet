<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ibnux.nuxwallet">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Aplikasi"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.SendMoneyActivity">
            <intent-filter android:label="Send NUX">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "nux://send”
                nux://send/ADDRESS/AMOUNT
                nux://send/NUX-1224-2121/20
                or without ammount
                nux://send/NUX-1224-2121
                -->
                <data android:scheme="nux"
                    android:host="send" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.WalletGeneratorActivity" />
        <activity android:name=".ui.HomeActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>